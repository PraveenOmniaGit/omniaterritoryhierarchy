<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Make index.html the default document -->
    <defaultDocument>
      <files>
        <clear />
        <add value="index.html" />
      </files>
    </defaultDocument>

    <!-- Optional: enable static content, caching, etc. -->
    <staticContent>
      <mimeMap fileExtension=".json" mimeType="application/json" />
    </staticContent>
  </system.webServer>
</configuration>
